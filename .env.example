# Digital Twin MedTech MVP Environment Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration  
DATABASE_URL=sqlite:///digital_twin.db

# ML Model Configuration
MODEL_RETRAIN_INTERVAL=24  # hours
MODEL_PREDICTION_THRESHOLD=0.5

# Simulation Configuration
SIMULATION_PATIENTS=5
SIMULATION_INTERVAL=45  # seconds between data points

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Power BI Configuration
POWERBI_REFRESH_INTERVAL=15  # minutes

# Security (for production deployment)
# SECRET_KEY=your-secret-key-here
# CORS_ORIGINS=["https://your-powerbi-domain.com"]
# API_KEY_HEADER=X-API-Key

# Healthcare Compliance
ENABLE_AUDIT_LOGGING=true
ANONYMIZE_PATIENT_DATA=false

# Development Settings
DEBUG_MODE=false
ENABLE_DEMO_DATA=true